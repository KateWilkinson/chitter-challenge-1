<!DOCTYPE html>
<html>
  <head>
    <title> Chitter </title>
  </head>

  <body>
    <% if current_user %>
      You're logged in as <%= current_user.username %>
    <% end %>
    <%= yield %>

    <% if flash[:errors] && !flash[:errors].empty? %>
        <ul id='errors'>
          <% flash[:errors].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
    <% end %>

  </body>
</html>